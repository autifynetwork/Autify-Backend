{
    "name": "autify-backend",
    "version": "1.0.0",
    "description": "Backend for Autify, a platform that provides trust in the global supply chain market using blockchain",
    "repository": "git@github.com:autifynetwork/Autify-Backend.git",
    "private": true,
    "scripts": {
        "tsc-check": "tsc --noEmit && tsc --noEmit --skipLibCheck",
        "dev": "nodemon -V -e ts,graphql -w ./src -x yarn run start",
        "start": "yarn build && node lib/servers/graphql-main.js | pino-pretty -c -l",
        "build": "tsc --skipLibCheck && tscpaths -p tsconfig.json -s ./src -o ./lib",
        "eslint-check": "eslint \"{src,test}/**/*.ts\"",
        "eslint-fix": "eslint \"{src,test}/**/*.ts\" --fix"
    },
    "engines": {
        "node": "18"
    },
    "dependencies": {
        "@prisma/client": "^4.9.0",
        "@sendgrid/mail": "^7.7.0",
        "apollo-server-core": "^3.11.1",
        "apollo-server-express": "^3.11.1",
        "class-validator": "^0.14.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "graphql": "15.3.0",
        "helmet": "^6.0.1",
        "js-yaml": "^4.1.0",
        "pino": "^8.8.0",
        "pino-http": "^8.3.1",
        "reflect-metadata": "^0.1.13",
        "type-graphql": "^1.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.15",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.20",
        "pino-pretty": "^9.1.1",
        "prettier": "^2.8.2",
        "prisma": "^4.9.0",
        "tsc": "^2.0.4",
        "tscpaths": "^0.0.9",
        "typescript": "^4.9.4"
    }
}
