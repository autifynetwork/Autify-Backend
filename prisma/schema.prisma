generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  whitelist String   @default("false")
  vendors   Vendor[] @relation("brandVendors")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vendor {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  whitelist String   @default("false")
  tags      Tag[]    @relation("vendorTags")
  brand     Brand    @relation("brandVendors", fields: [brandId], references: [id])
  brandId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  vendors   Vendor[] @relation("vendorTags")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
